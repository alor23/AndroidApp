<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context="com.example.alor.simonsays.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"

            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <Button
                android:id="@+id/startbutton"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:onClick="starGame"
                android:text="Start"
                tools:layout_editor_absoluteX="137dp"
                tools:layout_editor_absoluteY="16dp" />

            <Button
                android:id="@+id/yellowbutton"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:background="#e1fff200"
                android:enabled="true"
                android:onClick="CheckButton"
                android:text="Yellow"
                tools:layout_editor_absoluteX="137dp"
                tools:layout_editor_absoluteY="186dp" />

            <Button
                android:id="@+id/redbutton"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:background="#e1ff0004"
                android:enabled="true"
                android:onClick="CheckButton"
                android:text="red"
                tools:layout_editor_absoluteX="137dp"
                tools:layout_editor_absoluteY="90dp" />

            <Button
                android:id="@+id/greenbutton"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:background="#e13cff00"
                android:enabled="true"
                android:onClick="CheckButton"
                android:text="green"
                tools:layout_editor_absoluteX="244dp"
                tools:layout_editor_absoluteY="138dp" />

            <Button
                android:id="@+id/bluebutton"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:background="#e10044ff"
                android:enabled="true"
                android:onClick="CheckButton"
                android:text="blue"
                tools:layout_editor_absoluteX="39dp"
                tools:layout_editor_absoluteY="138dp" />

            <Button
                android:id="@+id/orangebutton"
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:background="#e1ff8400"
                android:enabled="true"
                android:onClick="CheckButton"
                android:text="ORANGE" />

            <Button
                android:id="@+id/purplebutton"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:background="#e19500ff"
                android:enabled="true"
                android:onClick="CheckButton"
                android:text="PURPLE" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:baselineAligned="false">

                <RadioButton
                    android:id="@+id/LEVEL1"
                    android:layout_width="574dp"
                    android:layout_height="71dp"
                    android:layout_weight="1"
                    android:checked="true"
                    android:onClick="level1"
                    android:text="LEVEL 1" />

                <RadioButton
                    android:id="@+id/LEVEL2"
                    android:layout_width="574dp"
                    android:layout_height="69dp"
                    android:layout_weight="1"
                    android:onClick="level2"
                    android:text="LEVEL 2" />

                <RadioButton
                    android:id="@+id/LEVEL3"
                    android:layout_width="574dp"
                    android:layout_height="69dp"
                    android:layout_weight="1"
                    android:onClick="level3"
                    android:text="LEVEL3" />
            </RadioGroup>

        </LinearLayout>
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
